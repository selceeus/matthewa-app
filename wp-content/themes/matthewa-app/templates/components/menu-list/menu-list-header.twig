{% set level = level + 1 %}
<menu class="menu-list {{ name }}" data-level="{{ level }}">
	{% for item in items %}
		<li class="menu-list-item">
			{% if item.link == '#' %}
				<button class="menu-link">
					<div class="text">{{ item.title }}</div>
					<div class="direction-indicator">â–²</div>
				</button>
				{% else %}
				<a href="{{ item.link }}" class="{{ item.classes|join(' ') }} menu-link text-sm inline-flex hover:text-blue-600 transition duration-150 ease-out" target="{{ item.target }}">
                    <span>{{ item.title }}</span>
                </a>
			{% endif %}
			{% if item.children %}
				{% include 'components/menu-list/menu-list-header.twig' with {'items': item.children} %}
			{% endif %}
		</li>
	{% endfor %}
</menu>