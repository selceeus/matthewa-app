{% set level = level + 1 %}
<menu class="{{ name }}" data-level="{{ level }}">
	{% for item in items %}
		<li class="{{ item.classes|join(' ') }}">
			{% if item.link == "#" %}
				<div class="menu-heading">{{ item.title }}</div>	
			{% else %}
				<a href="{{ item.link }}" target="{{ item.target }}" class="text-sm">
                    <span class="inline-flex">{{ item.title }}</span>
                </a>
			{% endif %}
			
			{% if item.children %}
				{% include "components/menu-list/menu-list.twig" with {'items': item.children} %}
			{% endif %}
		</li>
	{% endfor %}
</menu>